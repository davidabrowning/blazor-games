@using Models.Roygbiv;

@if (DrawPileTopCard == null)
{
	<EmptyCardView Text="-" />
}
else if (!DrawPileIsRevealed)
{
	<EmptyCardView Text="???" OnClick="OnClickEventCallback" />
}
else
{
	<NumberCardView Card=@DrawPileTopCard IsSelected=true />
}

@code {
	[Parameter]
	public Card? DrawPileTopCard { get; set; }

	[Parameter]
	public bool DrawPileIsRevealed { get; set; }

	[Parameter]
	public EventCallback OnClickEventCallback { get; set;  }
}