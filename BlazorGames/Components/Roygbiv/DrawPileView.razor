@using Models.Roygbiv;

@if (DrawPileTopCard == null)
{
	<EmptyCardView Text="N/A" />
}
else if (!DrawPileIsRevealed)
{
	<UnrevealedCardView Text="" OnClick="@OnClickEventCallback" />
}
else
{
	<NumberCardView Card="@DrawPileTopCard" IsSelected=true />
}

@code {
	[Parameter] public Card? DrawPileTopCard { get; set; }
	[Parameter] public bool DrawPileIsRevealed { get; set; } = false;
	[Parameter] public EventCallback OnClickEventCallback { get; set; }
}