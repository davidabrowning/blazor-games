@using Models.Roygbiv;

@if (DiscardPileTopCard == null)
{
	<EmptyPileView Text="Discard" />
}
else
{
	<NumberCardView Card="@DiscardPileTopCard" IsSelected=@DiscardPileIsSelected OnClick="@OnClickEventCallback" />
}

@code {
	[Parameter]
	public Card? DiscardPileTopCard { get; set; }

	[Parameter]
	public bool DiscardPileIsSelected { get; set; }

	[Parameter]
	public EventCallback OnClickEventCallback { get; set; }
}